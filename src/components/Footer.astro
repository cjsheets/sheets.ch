---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="copyright">
			&copy; {today.getFullYear()} Chad Sheets. All rights reserved.
		</div>
		<div class="legal-links">
			<a href="/privacy">Privacy</a>
			<a href="/terms">Terms of Service</a>
		</div>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(to bottom, transparent, rgba(24, 24, 24, 0.8) 50%, rgba(24, 24, 24, 1));
		color: rgba(255, 255, 255, 0.7);
		text-align: center;
		margin-top: auto;
	}

	.footer-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1em;
	}

	.copyright {
		font-size: 14px;
	}

	.legal-links {
		display: flex;
		gap: 2em;
		font-size: 12px;
	}

	.legal-links a {
		color: rgba(255, 255, 255, 0.6);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.legal-links a:hover {
		color: rgba(255, 255, 255, 0.9);
	}

	@media (max-width: 720px) {
		.legal-links {
			gap: 1em;
		}
	}
</style>
